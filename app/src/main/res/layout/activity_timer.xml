<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    app:cardCornerRadius="6dp"
    app:cardElevation="15dp"
    android:layout_margin="10dp">

    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="20sp"
    android:layout_gravity="center|top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimerActivity"
    android:orientation="horizontal">

    <TextView
        android:layout_marginLeft="150sp"
        android:id="@+id/hour"
        android:hint="00"
        android:text="00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text=" : "/>

    <TextView
        android:id="@+id/minute"
        android:hint="00"
        android:text="02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text=" : "/>

    <TextView
        android:id="@+id/second"
        android:hint="00"
        android:text="00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"/>

    <ImageView
        android:layout_marginLeft="70sp"
        android:id="@+id/slidedown"
        android:src="@drawable/slidedown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.robertlevonyan.views.customfloatingactionbutton.FloatingLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:fabMenuGravity = "bottom"
        app:fabMenuStyle="popRight"
        >

        <com.robertlevonyan.views.customfloatingactionbutton.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            app:elevation="2dp"
            app:fabColor="#f68657"
            app:fabIconPosition="start"
            app:fabRippleColor="@color/grey_600"
            app:fabSizes="normal"
            app:fabIcon="@drawable/set_clock"
            app:fabTextColor="@color/white"
            app:fabType="circle"/>

        <com.robertlevonyan.views.customfloatingactionbutton.FloatingActionButton
            android:id="@+id/startTimer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            app:elevation="2dp"
            app:fabColor="#fc9d9a"
            app:fabIconPosition="start"
            app:fabRippleColor="@color/grey_600"
            app:fabSizes="mini"
            app:fabIcon="@drawable/play"
            app:fabTextColor="@color/white"
            app:fabType="circle" />

        <com.robertlevonyan.views.customfloatingactionbutton.FloatingActionButton
            android:id="@+id/restartTimer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            app:elevation="2dp"
            app:fabColor="#fc9d9a"
            app:fabIconPosition="start"
            app:fabRippleColor="@color/grey_600"
            app:fabSizes="mini"
            app:fabIcon="@drawable/redo"
            app:fabTextColor="@color/white"
            app:fabType="circle" />

    </com.robertlevonyan.views.customfloatingactionbutton.FloatingLayout>
    </FrameLayout>


</android.support.v7.widget.CardView>